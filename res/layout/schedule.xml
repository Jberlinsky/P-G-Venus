<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scheduleLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/vbackground"
    android:paddingRight="3dp"
    android:paddingLeft="3dp">

   <TableLayout
       android:layout_width="match_parent"
     android:layout_height="fill_parent"
       android:background="@drawable/body"
       android:stretchColumns="0,1" >

  <TableRow
      android:layout_width="match_parent"
      android:layout_weight="0.2" >

        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/underarmleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/left_underarm"
            android:textColor="#ffffff" />


        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/underarmright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/right_underarm"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow
        android:layout_weight="0.2">

        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/forearmleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/left_forearm"
            android:textColor="#ffffff" />


        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/forearmright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/right_forearm"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow
        android:layout_weight="0.2">

        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/bikiniarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="Bikini                                        Area"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow
        android:layout_weight="0.2">

        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/upperlegleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/left_upper_leg"
            android:textColor="#ffffff" />


        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/upperlegright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/right_upper_leg"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow
        android:layout_weight="0.2">

        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/lowerlegleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/left_lower_leg"
            android:textColor="#ffffff" />


        <view class="com.venus.phone.SelectionButton"
            android:id="@+id/lowerlegright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/right_lower_leg"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/scheduleProceed"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/proceed"
            android:textColor="#000000"
            android:textSize="15dp" />

    </TableRow>
  </TableLayout>

</LinearLayout>
