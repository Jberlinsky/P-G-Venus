<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scheduleLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/vbackground"
    android:paddingRight="3dp"
    android:paddingLeft="3dp">

   <TableLayout
       android:layout_width="fill_parent"
     android:layout_height="fill_parent"
       android:background="@drawable/body1"
       android:stretchColumns="0" >

  <TableRow
      android:layout_width="fill_parent"
      android:layout_weight="0.2" >

        <view class="com.Venus.NakedSkin.SelectionButton"
            android:id="@+id/underarm"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#20ffffff"
            android:text="@string/underarm"
            android:textColor="#ffffff" />

    </TableRow>
  
    <TableRow
        android:layout_weight="0.2">

        <view class="com.Venus.NakedSkin.SelectionButton"
            android:id="@+id/bikiniarea"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="Bikini                             Area"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow
        android:layout_weight="0.2">

        <view class="com.Venus.NakedSkin.SelectionButton"
            android:id="@+id/upperleg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#20ffffff"
            android:text="@string/upper_leg"
            android:textColor="#ffffff" />


    </TableRow>
    <TableRow
        android:layout_weight="0.2">


        <view class="com.Venus.NakedSkin.SelectionButton"
            android:id="@+id/lowerleg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#20ffffff"
            android:text="@string/lower_leg"
            android:textColor="#ffffff" />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/scheduleProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/proceed"
            android:paddingTop="5dp"
			 android:paddingBottom="5dp"
			 android:paddingLeft="30dp"
			 android:paddingRight="30dp"
			 android:background="@drawable/buttonbackground"
			 android:textColor="#FFFFFF"
			 android:textSize="15sp" />

    </TableRow>
  </TableLayout>

</LinearLayout>
