<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventtreatmentlayout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/vbackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:stretchColumns="0" >
    	
    <TableRow 
        android:layout_weight="0.1"
        android:gravity="center">
    <TextView
        android:id="@+id/treatmenttitle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Large Text"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>
    <TableRow 
        android:layout_weight="0.1"
        android:gravity="center">
    <TextView
        android:id="@+id/treatmentdescription"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Large Text"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>
    <TableRow 
        android:layout_weight="0.1"
        android:gravity="center">
    <TextView
        android:id="@+id/treatmentdate"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Large Text"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>
    <TableRow
        android:layout_weight="0.75"
        android:baselineAligned="false"
        android:gravity="center" >	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/backgroundbody"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:paddingLeft="3dp"
	    android:paddingRight="3dp"
	    android:stretchColumns="0">
    <TableRow
        android:layout_weight="0.14"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>

     <TableRow
        android:layout_weight="0.16"
        android:id="@+id/underarmevent"
        android:layout_width="200dp"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
        <TableRow
            
	        android:layout_weight="0.09"
	        android:layout_width="fill_parent"
	        android:baselineAligned="false"
	        android:gravity="center" >
        </TableRow>
        <TableRow
        android:id="@+id/bikinievent"
        android:layout_weight="0.14"
        android:layout_width="200dp"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
        <TableRow
        android:layout_weight="0.01"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
        <TableRow
        android:id="@+id/upperevent"
        android:layout_weight="0.21"
        android:layout_width="200dp"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
        <TableRow
        android:layout_weight="0.01"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
        <TableRow
       	android:id="@+id/lowerevent"
        android:layout_weight="0.24"
        android:layout_width="200dp"
        android:baselineAligned="false"
        android:gravity="center" >
        </TableRow>
    </TableLayout>
    </TableRow>
    
    <TableRow android:gravity="center">
	    <Button
            android:id="@+id/treatmentBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:text="Back"
            android:paddingTop="5dp"
			 android:paddingBottom="5dp"
			 android:paddingLeft="30dp"
			 android:paddingRight="30dp"
			 android:background="@drawable/buttonbackground"
			 android:textColor="#FFFFFF"
			 android:textSize="15sp"/>
	</TableRow>
</TableLayout>

