<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vbackground"
    android:orientation="vertical"
    android:paddingBottom="60dp"
    android:paddingTop="60dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:text="Settings" />


    <TextView
        android:id="@+id/settingsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:paddingTop="10dp"
        android:text="@string/set_email" />

    <EditText
        android:id="@+id/settingsEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:inputType="textEmailAddress" >
        <requestFocus />
    </EditText>


    <Button
        android:id="@+id/settingsOk"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.00"
        android:text="@string/save" />


    <Button
        android:id="@+id/settingsInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="@string/view_tutorial" />

</LinearLayout>
